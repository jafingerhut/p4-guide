+            cd ${INSTALL_DIR}/${OUT_FNAME}
+           tar xf snap.tar
+        fi
+        if [ "${ID}" = "ubuntu" ]
+        then
+            cd ${INSTALL_DIR}/${OUT_FNAME}
+            set +e
+            apt list --installed | grep -i z3 > z3-in-output-of-apt-list--installed.txt
