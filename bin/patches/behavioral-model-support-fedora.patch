+debug_dump_installed_z3_files() {
+    local OUT_FNAME="$1"
+    local SAVE_PWD="$PWD"
+    local NUMFILES=""
+    if [ ${DEBUG_INSTALL} -ge 2 ]
+    then
+        mkdir -p ${INSTALL_DIR}/${OUT_FNAME}
+        # On some systems the following find command returns non-0
