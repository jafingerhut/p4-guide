+        then
+            touch ${INSTALL_DIR}/${OUT_FNAME}/no-z3-files-in-usr-dirs
+        else
+            find /usr -name '*z3*' -a \! -type d | xargs tar cf ${INSTALL_DIR}/${OUT_FNAME}/snap.tar
